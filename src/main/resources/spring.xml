<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:c="http://www.springframework.org/schema/c"
       xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-4.2.xsd
 		http://www.springframework.org/schema/util
 		http://www.springframework.org/schema/util/spring-util-4.2.xsd">

    <import resource="logger-beans.xml"/>

    <!--add link to property file-->
    <!--<util:properties id="clientProps" location="classpath:client.properties"/>-->

    <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="locations">
            <list>
                <value>classpath:client.properties</value>
            </list>
        </property>
        <!--<property name="locations">
            <list>
                <value>classpath:test.properties</value>
            </list>
        </property>-->
        <property name="ignoreResourceNotFound" value="true" />
        <property name="systemPropertiesMode">
            <util:constant
                    static-field="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer.SYSTEM_PROPERTIES_MODE_NEVER" />
        </property>
    </bean>

    <bean id="client" class="den.xmlconfiguration.Client"
          p:greeting="${greeting}"
          c:id="${id}"
          c:fullName="${userName}"/>
    <!--
        Possible to use:
        <constructor-arg value="${id}"/>
        <constructor-arg value="${name}"/>
          or:
          <constructor-arg value="UserName"/>
        <property name="greeting" value="${greeting}"/>
    -->

    <util:map id="loggerMap">
        <entry key="INFO" value-ref="eventLogger"/>
        <entry key="ERROR" value-ref="combineEventLogger"/>
    </util:map>

    <bean id="mainApplication" class="den.xmlconfiguration.StartApp">
        <constructor-arg ref="eventLogger"/>
        <constructor-arg ref="loggerMap"/>
        <constructor-arg ref="client"/>
    </bean>

</beans>